<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_book"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back"
        app:title="Agregar Nuevo Libro"
        android:textAlignment="center"
        app:titleTextColor="@color/black"
        tools:layout_editor_absoluteX="104dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_add_book"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portada del Libro"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imgPortadaPreview"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:src="@drawable/book"
                    android:scaleType="centerCrop"
                    android:contentDescription="Porta del libro a subir" />

                <Button
                    android:id="@+id/btnSeleccionarImagen"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar imagen"
                    android:backgroundTint="@color/darkBlue"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightGray"
                        android:layout_marginVertical="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información Básica"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ISBN (opcional)"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autor(es)"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />




                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Categoría" android:textStyle="bold" />
            <Spinner
                android:id="@+id/spnCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/categorias_array"
                android:spinnerMode="dropdown"
                android:minHeight="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />

            <TextView android:id="@+id/txtTemaLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tema" android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnTema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:minHeight="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView android:id="@+id/txtGeneroLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Género" android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:minHeight="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/edtNumeroPaginas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de páginas"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtSinopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sinopsis (opcional)"
                android:inputType="textMultiLine"
                android:lines="4"
                android:gravity="top|start"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightGray" android:layout_marginVertical="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado de lectura"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtPaginaActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Página actual (dejar en 0 si es 'Por leer')"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnCancelar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnGuardarLibro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar libro"
            android:backgroundTint="@color/darkBlue"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>