<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:id="@+id/PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="15dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_add_book"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/arrow_back"
            android:textAlignment="center"
            app:titleTextColor="@color/black" />

        <!-- Encabezado -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_background"
            android:contentDescription="Foto de perfil"
            android:padding="16dp" />

        <TextView
            android:id="@+id/tvCambiarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toca para cambiar foto"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="#888888" />

        <!-- Sección de estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="Libros leídos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#777" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="156"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="Páginas hoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#777" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="Días seguidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#777" />
            </LinearLayout>
        </LinearLayout>

        <!-- Información personal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <!-- NOMBRE -->
            <TextView
                android:text="Nombre completo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#777" />

            <!-- Texto normal -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="María González López"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- Campo editable oculto -->
            <EditText
                android:id="@+id/edtNombreEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:textSize="16sp"
                android:visibility="gone" />


            <!-- FECHA DE NACIMIENTO -->
            <TextView
                android:text="Fecha de nacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/01/1990"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtFechaEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de nacimiento"
                android:textSize="16sp"
                android:visibility="gone" />


            <!-- PROFESIÓN -->
            <TextView
                android:text="Profesión"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvProfesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingeniera de Software"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtProfesionEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Profesión"
                android:textSize="16sp"
                android:visibility="gone" />


            <!-- GÉNERO -->
            <TextView
                android:text="Género"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Femenino"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Spinner editable -->
            <Spinner
                android:id="@+id/spinnerGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <!-- CORREO -->
            <TextView
                android:text="Correo electrónico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="maria.gonzalez@email.com"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:text="No se puede modificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#AAA" />


        </LinearLayout>


        <!-- Botones -->
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar información personal"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/darkBlue"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/darkBlue"
            android:textColor="#FFFFFF"
            android:visibility="gone" />


        <Button
            android:id="@+id/btnCambiarContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar contraseña"
            android:layout_marginTop="8dp"
            android:backgroundTint="#EAEAEA"
            android:textColor="#000000" />


    </LinearLayout>
</ScrollView>
